<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.jpg</argument>
                <argument name="logo_img_width" xsi:type="number">160</argument>
                <argument name="logo_img_height" xsi:type="number">160</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="sidebar.main">
            <block class="Magento\Framework\View\Element\Template" name="gorban.promo.block"
                   as="promo_block"
                   template="Magento_Theme::gorban/sidebar_promo_block.phtml">
            </block>
        </referenceContainer>
    </body>
</page>